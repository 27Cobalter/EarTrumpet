<Window x:Class="EarTrumpet.UI.Views.AddonSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:EarTrumpet.UI.Views"
        Title="AddonSettingsWindow"
        Style="{StaticResource DialogWindowStyle}"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBlock Padding="20,8,20,8"
                       Text="{Binding ElementName=WindowRoot, Path=Title}"
                       TextAlignment="Left" />
            <Button x:Name="CloseButton"
                    Grid.Column="1"
                    Click="CloseButton_Click"
                    Content="&#xE8BB;"
                    Style="{DynamicResource CloseButtonStyle}" />
        </Grid>
        <Grid Margin="24">
            <Grid Name="AddonHostGrid">
                <ContentControl Name="AddonHost" />
            </Grid>
        </Grid>
    </DockPanel>
</Window>
