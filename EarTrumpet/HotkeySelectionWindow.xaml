<Window x:Class="EarTrumpet.HotkeySelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EarTrumpet"
        mc:Ignorable="d"
        Title="Select a hotkey" Height="110" Width="150"
         PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <StackPanel>
            <TextBlock Margin="12" Name="HotkeyText" />
            <Button Margin="12" Click="Button_Click">Save</Button>
        </StackPanel>
        
    </Grid>
</Window>
