<UserControl x:Class="EarTrumpet.UserControls.AudioPeakMeter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             IsTabStop="False"
             Focusable="False"
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <SolidColorBrush x:Key="PeakMeterHotColor"
                         Color="Red" />
        <SolidColorBrush x:Key="CottonSwabSliderTrackBackground"
                         Color="#39FFFFFF" />
        <SolidColorBrush x:Key="CottonSwabSliderTrackFill"
                         Color="#FF339933" />
    </UserControl.Resources>
    <Grid Name="MainGrid" VerticalAlignment="Center" Background="{DynamicResource CottonSwabSliderTrackBackground}">
        <Border HorizontalAlignment="Left" Height="2" Name="volumeBorder" Background="{DynamicResource CottonSwabSliderTrackFill}" />
        <Border HorizontalAlignment="Left" Height="2" Name="peakBorder" Background="{DynamicResource PeakMeterHotColor}" />
    </Grid>
</UserControl>
