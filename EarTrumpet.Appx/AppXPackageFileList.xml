<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  
  <PropertyGroup>
    <EarTrumpetBuildDirectory>$(MSBuildProjectDirectory)\..\Build</EarTrumpetBuildDirectory>
    <RuntimeComponentBuildRoot>$(MSBuildProjectDirectory)\..\EarTrumpet.BackgroundTasks\bin\$(Platform)\$(Configuration)</RuntimeComponentBuildRoot>
    <UwpComponentBuildRoot>$(MSBuildProjectDirectory)\..\EarTrumpet.UWP</UwpComponentBuildRoot>
    <UwpComponentAppxRoot>bin\$(Platform)\$(Configuration)\AppX</UwpComponentAppxRoot>
  </PropertyGroup>
  
  <ItemGroup>
    <!-- EarTrumpet -->
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\EarTrumpet.exe">
      <PackagePath>$(PackageLayout)\EarTrumpet.exe</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\EarTrumpet.pdb" Condition="'$(Configuration)' == 'Debug'">
      <PackagePath>$(PackageLayout)\EarTrumpet.pdb</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\EarTrumpet.Interop.pdb" Condition="'$(Configuration)' == 'Debug'">
      <PackagePath>$(PackageLayout)\EarTrumpet.Interop.pdb</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\EarTrumpet.exe.config">
      <PackagePath>$(PackageLayout)\EarTrumpet.exe.config</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\EarTrumpet.Interop.dll">
      <PackagePath>$(PackageLayout)\EarTrumpet.Interop.dll</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\de\EarTrumpet.resources.dll">
      <PackagePath>$(PackageLayout)\de\EarTrumpet.resources.dll</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\fr\EarTrumpet.resources.dll">
      <PackagePath>$(PackageLayout)\fr\EarTrumpet.resources.dll</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\nb-no\EarTrumpet.resources.dll">
      <PackagePath>$(PackageLayout)\nb-no\EarTrumpet.resources.dll</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(EarTrumpetBuildDirectory)\$(Configuration)\nn-no\EarTrumpet.resources.dll">
      <PackagePath>$(PackageLayout)\nn-no\EarTrumpet.resources.dll</PackagePath>
    </LayoutFile>
    
    <!-- Runtime Component -->
    <LayoutFile Include="$(RuntimeComponentBuildRoot)\EarTrumpet.BackgroundTasks.pri">
      <PackagePath>$(PackageLayout)\EarTrumpet.BackgroundTasks.pri</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(RuntimeComponentBuildRoot)\EarTrumpet.BackgroundTasks.winmd">
      <PackagePath>$(PackageLayout)\EarTrumpet.BackgroundTasks.winmd</PackagePath>
    </LayoutFile>

    <!-- UWP Component -->
    <LayoutFile Include="$(UwpComponentBuildRoot)\Assets\SplashScreen.scale-200.png">
      <PackagePath>$(PackageLayout)\UWP\Assets\SplashScreen.scale-200.png</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\Assets\Square44x44Logo.scale-200.png">
      <PackagePath>$(PackageLayout)\UWP\Assets\Square44x44Logo.scale-200.png</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\Assets\Square44x44Logo.targetsize-24_altform-unplated.png">
      <PackagePath>$(PackageLayout)\UWP\Assets\Square44x44Logo.targetsize-24_altform-unplated.png</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\Assets\Square150x150Logo.scale-200.png">
      <PackagePath>$(PackageLayout)\UWP\Assets\Square150x150Logo.scale-200.png</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\Assets\welcome.gif">
      <PackagePath>$(PackageLayout)\UWP\Assets\welcome.gif</PackagePath>
    </LayoutFile>
       
    <LayoutFile Include="$(UwpComponentBuildRoot)\$(UwpComponentAppxRoot)\AppxManifest.xml">
      <PackagePath>$(PackageLayout)\UWP\AppxManifest.xml</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\$(UwpComponentAppxRoot)\clrcompression.dll">
      <PackagePath>$(PackageLayout)\UWP\clrcompression.dll</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\$(UwpComponentAppxRoot)\EarTrumpet.UWP.dll">
      <PackagePath>$(PackageLayout)\UWP\EarTrumpet.UWP.dll</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\$(UwpComponentAppxRoot)\EarTrumpet.UWP.exe">
      <PackagePath>$(PackageLayout)\UWP\EarTrumpet.UWP.exe</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\$(UwpComponentAppxRoot)\EarTrumpet.UWP.pdb" Condition="'$(Configuration)' == 'Debug'">
      <PackagePath>$(PackageLayout)\UWP\EarTrumpet.UWP.pdb</PackagePath>
    </LayoutFile>
    <LayoutFile Include="$(UwpComponentBuildRoot)\$(UwpComponentAppxRoot)\resources.pri">
      <PackagePath>$(PackageLayout)\UWP\resources.pri</PackagePath>
    </LayoutFile>
  </ItemGroup>

</Project>