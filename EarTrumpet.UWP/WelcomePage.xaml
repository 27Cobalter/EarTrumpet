<Page
    x:Class="EarTrumpet.UWP.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid MaxWidth="460" MaxHeight="380" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Image Style="{ThemeResource AppIcon}" Width="32" Height="32" Margin="0"/>
                <TextBlock x:Name="Welcome" Foreground="{ThemeResource TextControlForeground}" FontSize="18" Margin="20,20,0,20">Welcome to EarTrumpet</TextBlock>
            </StackPanel>
            <Image Grid.Row="1" HorizontalAlignment="Left" Height="241" Source="Assets\welcome.gif" />
            <Button Grid.Row="2" HorizontalAlignment="Right" Width="160" VerticalAlignment="Bottom" Margin="0,20,0,0" Click="Close_Click">Close</Button>
        </Grid>
    </Grid>
</Page>
