<Page
    x:Class="EarTrumpet.UWP.WelcomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid MaxWidth="400" MaxHeight="270" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" x:Name="Welcome" Foreground="{ThemeResource TextControlForeground}" FontSize="18" Margin="0,20,0,30">Welcome to EarTrumpet</TextBlock>
            <Image Grid.Row="1" Margin="0,0,0,10" HorizontalAlignment="Center" />
            <Button Grid.Row="2" HorizontalAlignment="Right" Width="160" VerticalAlignment="Bottom" Margin="0,20,0,0" Click="Close_Click">Close</Button>
        </Grid>
    </Grid>
</Page>
